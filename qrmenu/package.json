{
  "name": "@qrmenu/workspace",
  "version": "1.0.0",
  "private": true,
  "description": "QR Menu - Pinterest-style infinite scrolling menu system",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --parallel -r dev",
    "dev:test-wrapper": "pnpm --parallel -r --filter=\"!qrmenu-test-wrapper\" dev & pnpm --filter=qrmenu-test-wrapper dev",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test"
  },
  "workspaces": [
    "packages/*",
    "test-wrapper"
  ],
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.1.4",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "dependencies": {
    "@egjs/react-infinitegrid": "^4.12.0",
    "@heroicons/react": "^2.2.0",
    "react-router-dom": "^6.30.1",
    "zustand": "^5.0.5"
  }
}